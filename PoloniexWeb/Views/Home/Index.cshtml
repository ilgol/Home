    <script>
        $(function () {
            setInterval(newElement, 3000);
        })
        function newElement() {
            var $this = $(".img");
            $this.removeClass();
            $this = reset($this);
            $this.addClass("img bounce animated");
        }
        function reset($elem) {
            $elem.before($elem.clone(true));
            var $newElem = $elem.prev();
            $elem.remove();
            return $newElem;
        }
    </script>
